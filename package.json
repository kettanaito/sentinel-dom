{
  "name": "sentinel-dom",
  "libraryName": "Sentinel",
  "version": "0.7.7",
  "description": "Lightweight, powerful and reliable library to determine the visibility of DOM elements.",
  "source": "src/index.js",
  "main": "lib/index.js",
  "engines": {
    "node": ">= 5.10",
    "npm": ">= 4"
  },
  "scripts": {
    "start": "webpack --watch",
    "build": "NODE_ENV=production webpack",
    "flow": "flow",
    "test:static": "mocha --compilers js:babel-core/register",
    "test:dom": "mocha-headless-chrome -f ./test/dom/index.html",
    "test": "npm run test:static && npm run test:dom",
    "test:coverage": "instanbul cover _mocha -- --compilers js:babel-core/register",
    "prepublishOnly": "npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kettanaito/sentinel-dom.git"
  },
  "keywords": [
    "sentinel",
    "sentinel-dom",
    "visible",
    "visibility",
    "tracker",
    "tracking",
    "dom",
    "visibility analysis",
    "snapshot",
    "snapshots",
    "dom element",
    "impressions",
    "impression",
    "visible",
    "analytics tracking",
    "tracker"
  ],
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.2",
    "babel-minify-webpack-plugin": "^0.2.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "chai": "^4.1.2",
    "eslint": "^4.6.1",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.7.0",
    "flow": "^0.2.3",
    "istanbul": "^0.4.5",
    "mocha": "^3.5.0",
    "mocha-headless-chrome": "^1.4.0",
    "webpack": "^3.5.5"
  }
}
